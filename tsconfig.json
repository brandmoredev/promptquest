{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Base directory for resolving non-relative paths
    "paths": {
      "@components/*": ["components/*"],  // Maps '@components' to 'components'
      "@models/*": ["models/*"],  // Maps '@models' to 'models'
      "@styles/*": ["styles/*"],          // Maps '@styles' to 'styles'
      "@utils/*": ["utils/*"],            // Maps '@utils' to 'utils'
      "@/*": ["*"]                        // Maps '@' to the root of the project
    },
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/creator/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
